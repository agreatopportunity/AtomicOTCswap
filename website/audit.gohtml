<!DOCTYPE html>
<html lang="en">
{{template "head"}}
<body>
{{template "menu"}}


<div class="container">
    <form id="audit-form" @submit.prevent="processForm">

        <div class="form-row">
        <div class="form-group col-md-4">
            <label for="coin">Asset</label>
            <select name="coin" id="coin" class="form-control" required>
                <option disabled selected value> -- select an option -- </option>
                <option value="btc">Bitcoin</option>
                <option value="via">Viacoin</option>
                <option value="ltc">Litecoin</option>
            </select>
        </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="contractHex">Contract Hex</label>
                <input type="text" class="form-control" id="contractHex" name="contractHex" placeholder="" autocomplete="off" required>
            </div>
            <div class="form-group">
                <label for="contractTransaction">Contract Transaction</label>
                <input type="text" class="form-control" id="contractTransaction" name="contractTransaction" placeholder="" autocomplete="off" required>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Audit</button>
    </form>
</div>

<script>
    const app = new Vue({
        el: '#audit-form',
        data () {
            return {
                audit: []
            }
        },
        methods: {
            processForm: function () {
                axios.post('http://127.0.0.1:8000/api/audit', {
                    coin: "via",
                    contractHex: "6382012088a820b9c1d630a5de7f1fc9d8ce868f5418e81bdf467296654480156505800f90f1828876a914c4ecdb11e3985a96e001079629ffe1d94150379467041dc8495cb17576a9148e4d174eb2236d8ab0c5bb250df08a5af054d3206888ac",
                    contactTransaction: ""
                }).then((response) => {
                    console.log(response.data)
                    this.audit = response.data
                })
                    .catch((e) => {
                        console.log(e)
                    })
            }
        }
    });
</script>

</body>
</html>